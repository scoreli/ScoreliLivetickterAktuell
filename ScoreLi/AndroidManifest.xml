<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tk.scoreli.liveticker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".AnzeigeActivity"
            android:label="@string/title_activity_anzeige"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SteuerungActivity"
            android:label="@string/title_activity_steuerung" >
        </activity>
        <activity
            android:name=".SpieleActivity"
            android:label="@string/title_activity_spiele" >
        </activity>
        <activity
            android:name=".NeuesSpielActivity"
            android:label="@string/title_activity_neues_spiel"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".UpdateSpielActivity"
            android:label="@string/title_activity_update_spiel" >
        </activity>
        <activity
            android:name=".GepaarteBtActivity"
            android:label="@string/title_activity_gepaarte_bt" >
        </activity>
        <activity
            android:name=".Bluetoothtest"
            android:label="@string/title_activity_bluetoothtest" >
        </activity>
        <activity
            android:name=".bluetoothneu.Bluetoothclient"
            android:label="@string/title_activity_bluetoothclient"
            android:screenOrientation="landscape"  >
        </activity>
        <activity
            android:name="tk.scoreli.liveticker.bluetoothneu.BluetoothServer"
            android:label="@string/title_activity_bluetooth_server"
            android:screenOrientation="landscape" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

</manifest>
